html
    head
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC', crossorigin='anonymous')
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js', integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM', crossorigin='anonymous')
    body
        nav.navbar.navbar-expand-lg.navbar-light.bg-light
          .container-fluid
            a.navbar-brand(href='/') Home
            button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
              span.navbar-toggler-icon
            #navbarContent.collapse.navbar-collapse
              ul.navbar-nav.me-auto.mb-2.mb-lg-0
                li.nav-item
                  a.nav-link(href='/users') Users
                li.nav-item
                  a.nav-link(href='/products') Products
              if user
                ul.navbar-nav
                  li.nav-item.dropdown
                    a#navbarDropdown.nav-link.dropdown-toggle(href='#', role='button', data-bs-toggle='dropdown', aria-haspopup='true', aria-expanded='false')= user.name
                    ul.dropdown-menu.dropdown-menu-end(aria-labelledby='navbarDropdown')
                      li
                        a.dropdown-item(href='#') Profile
                      li
                        a.dropdown-item(href='/logout') Logout
              else
                a(href='/login', style='font-size= 20px; margin-right: 5px;') Login
        block content